
<p><font color="grey">
<h1> <%= @book.name%></h1>
<h2><i><%= @book.author%></i></h2>

</p>
</font>
<h3> BOOK REVIEWS </h3>
<br/>
<% @book.reviews.each do |review| %>
<p>
  <%=review.content %> <br>
  

  <% if review.user %>
  <font color="teal"> Written by:</font><%= review.user.name.capitalize%><br>

  <% if logged_in? and review.user == current_user %>
  <a href="/reviews/<%=review.id%>/edit">Edit review</a><br>
  <a href="/reviews/<%=review.id%>/delete">Delete review</a>
  <% end %>
  <% end %>
</p>
<% end %>
<p><a href="/reviews/<%=@book.id%>/new">ADD A REVIEW</a></p>
<p><a href="/books"> BACK TO BOOKS </a></p>
<a href="/logout">LOG OUT</a>